# ============================================
# SubTracker Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control!
# ============================================

# ============================================
# DATABASE (Required)
# ============================================
DB_URL=jdbc:postgresql://localhost:5432/subscription_tracker_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=5

# ============================================
# JWT (Required)
# Generate with: openssl rand -base64 32
# ============================================
JWT_SECRET=REPLACE_WITH_STRONG_256_BIT_SECRET_KEY
JWT_EXPIRATION=86400000

# ============================================
# EMAIL (Required for alerts)
# Use Gmail App Password, not your actual password
# Generate at: https://myaccount.google.com/apppasswords
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=SubTracker

# ============================================
# STRIPE (Required for payments)
# Get from: https://dashboard.stripe.com/apikeys
# ============================================
STRIPE_SECRET_KEY=sk_live_your_live_key_here

# ============================================
# CORS (Required)
# Comma-separated list of allowed origins
# ============================================
CORS_ORIGINS=https://your-frontend-domain.com

# ============================================
# FRONTEND URL (Required for redirects)
# ============================================
FRONTEND_URL=https://your-frontend-domain.com

# ============================================
# SCRAPER CONFIG (Optional - defaults provided)
# ============================================
USD_TO_INR_RATE=83.0
SCRAPER_TIMEOUT=15000
SCRAPER_RETRY_MAX=3
SCRAPER_RETRY_DELAY=2000
SCRAPER_LOG_LEVEL=INFO

# ============================================
# SCHEDULER (Optional - defaults provided)
# ============================================
SCHEDULER_TIMEZONE=Asia/Kolkata

# ============================================
# JPA (Optional - defaults provided)
# Set to 'validate' in production for safety
# ============================================
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false

# ============================================
# SERVER (Optional)
# ============================================
PORT=8084
